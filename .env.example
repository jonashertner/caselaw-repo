# === Core ===
APP_ENV=dev
APP_NAME=Swiss Case Law AI
PUBLIC_BASE_URL=http://localhost:8000

# === Database ===
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/swisslaw
DB_ECHO=0

# === Ingestion ===
INGEST_USER_AGENT=swiss-caselaw-ai/0.1 (+https://localhost)
INGEST_MAX_PAGES_PER_SOURCE=2000
INGEST_MAX_DEPTH=3
INGEST_RESPECT_ROBOTS=1
INGEST_REQUEST_TIMEOUT_S=30
INGEST_CONCURRENCY=10

# === AI providers ===
EMBEDDINGS_DIM=3072

# options: openai, local
LLM_PROVIDER=openai
EMBEDDINGS_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-5
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-large

# Local (optional)
LOCAL_EMBEDDINGS_MODEL=intfloat/multilingual-e5-base
LOCAL_LLM_MODEL= # e.g. llama.cpp server URL if you add one

# === Security ===
# Generate a long random value for production
JWT_SECRET=dev-secret-change-me
CORS_ORIGINS=http://localhost:3000
